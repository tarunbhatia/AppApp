<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="bitterlakestudios.tarun.com.appapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.android.vending.CHECK_LICENSE" />


    <application
        android:allowBackup="true"
        android:icon="@drawable/appapplogo"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.Light">
        <activity
            android:name=".Activity.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.CandidatesListActivity"
            android:label="@string/title_activity_candidates_list" />
        <activity
            android:name=".Activity.CandidateDetailActivity"
            android:label="@string/title_activity_candidate_detail" />
        <activity
            android:name=".Activity.AboutActivity"
            android:label="@string/title_activity_about" />
        <activity
            android:name=".Activity.CandidatesDetailActivity"
            android:label="@string/title_activity_candidates_detail"></activity>
    </application>

</manifest>
